input_=input("Enter your age or date of birth to check when will you turn by 100 years old :")
len_=len(input_)
inputt=int(input_)
if len_==2:
  age=100-inputt+2020
  print (f"you will turn by 100 in {age}")
elif len_==4:
  agee=inputt+100 
  print(f"You will turn 100 in {agee}")
elif len_>4:
  print ("App bht bhooore hain")
elif len_<2:
  print ("App paida nai howe")
else:
  print("Itne bare ho app")
intg=input("Write any year to know your age in that year:")
len_=len(intg)
inputt=int(intg)
if len_==4:
  agge=inputt-2020
  print(f"You will be {agge} years old in {inputt}")
else:
  print ("Masti kr rya")
